<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../detalhes.css" type="text/css">
    
    <title>Pokedex </title>

</head>
<body>

    <header>

        <div class="logo">
        <img src="https://logosmarcas.net/wp-content/uploads/2020/05/Pokemon-Logo.png" alt="pokemon logo">
        </div>

    </header>

    <main>
        <section id="cards">
            
            <% pokemonAtual.forEach((element) => {  %>

                <a href="/detalhes/<%= element.id %> ">

                    <div class="cards">

                        <img src="<%= element.img %>">

                        <h2> <%= element.name %> </h2>

                        <p class="numero">NÂº: <%= element.num %> </p>

                        <p>Tipo: <b> <%= element.type %> </b> </p>

                </div>
            </a>

            <% }) %>

       </section>

    </main>
</body>
</html>